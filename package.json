{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "My personal site, built with Nuxt, Tailwind, and Netlify.",
  "author": "Matt Waler",
  "private": true,
  "scripts": {
    "analyze": "nuxt build -a",
    "prebuild": "rm -r .build .functions",
    "build": "netlify-lambda build functions && nuxt generate",
    "dev": "parallelshell 'nuxt' 'yarn watch' 'yarn functions'",
    "functions": "netlify-lambda serve functions",
    "watch": "watch 'node assets/config/styles' assets/styles --interval=1"
  },
  "dependencies": {
    "@nuxtjs/dotenv": "^1.3.0",
    "@nuxtjs/pwa": "^3.0.0-beta.14",
    "axios": "^0.18.0",
    "cross-env": "^5.2.0",
    "nuxt": "^2.4.0",
    "nuxt-svg-loader": "^1.0.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-vue": "^5.2.2",
    "netlify-lambda": "^1.4.5",
    "nodemon": "^1.18.9",
    "parallelshell": "^3.0.2",
    "postcss-clean": "^1.1.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-easy-media-query": "^1.0.0",
    "postcss-nested": "^4.1.2",
    "tailwindcss": "^1.0.0-beta.3",
    "watch": "^1.0.2"
  }
}
