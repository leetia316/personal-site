{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "My personal site, built with Nuxt, Tailwind, and Netlify.",
  "author": "Matt Waler",
  "private": true,
  "scripts": {
    "dev": "nuxt -c config/nuxt.config.js",
    "functions": "netlify-lambda serve functions/src",
    "gen": "netlify-lambda build functions/src && nuxt generate -c config/nuxt.config.js",
    "sg": "vue-styleguidist server",
    "sg:build": "vue-styleguidist build --config config/styleguide.config.js",
    "start": "nuxt start -c config/nuxt.config.js",
    "test": "jest -c=config/jest.config.js"
  },
  "dependencies": {
    "@nuxtjs/apollo": "^4.0.0-rc4",
    "@nuxtjs/dotenv": "^1.3.0",
    "cross-env": "^5.2.0",
    "graphql-tag": "^2.10.1",
    "nuxt": "^2.4.0",
    "nuxt-svg-loader": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "@nuxtjs/markdownit": "^1.2.3",
    "@vue/cli-plugin-babel": "^3.4.1",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "css-loader": "^2.1.1",
    "dotenv": "^7.0.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-vue": "^5.2.2",
    "jest": "^23.6.0",
    "netlify-lambda": "^1.4.5",
    "nodemon": "^1.18.9",
    "postcss-clean": "^1.1.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-easy-media-query": "^1.0.0",
    "postcss-nested": "^4.1.2",
    "tailwindcss": "^1.0.0-beta.3",
    "vue": "^2.6.7",
    "vue-jest": "^3.0.2",
    "vue-loader": "^15.7.0",
    "vue-styleguidist": "^3.0.16",
    "vue-template-compiler": "^2.6.7",
    "webpack": "^4.29.5"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          ["@babel/preset-env", {
            "targets": {
              "node": "current"
            }
          }],
          "@nuxt/babel-preset-app"
        ]
      }
    }
  }
}
